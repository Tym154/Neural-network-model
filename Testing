#include <iostream>
#include <vector>
#include <cmath>
#include <fstream>
#include <sstream>
#include <string>

using namespace std;

int main(){
    fstream data;
    data.open("data/data.csv");

    if(!data.is_open()){
        cout << "Error \n";
    }

    string line;

    getline(data, line);

    int count =0;
    vector<int> rowData(784, 0);
    string temp = "";
    int index = 0;
    for(int i = 0; i < line.length(); i++){
       if(line[i] == ','){
        rowData[index++] = stoi(temp);
        temp = "";
        count++;
       }
       else{
        temp += line[i];
       }
    }

    for(int el : rowData){
        cout << el << "\n";
    }

    cout <<"\n" << count << "\n";

    data.close();

    return 0;
}
